type Role {
    id: ID
    name: String
}

type UserQuery {
    getJwt(token: String!): String
    roles(id: ID, emailAddress: String): [Role]
}

type RoleQuery {
    all: [Role]
}

type Query {
    user: UserQuery
    role: RoleQuery
}

type UserMutation {
    addRole(emailAddress: String, id: ID, role: String!): Boolean
    deleteRole(emailAddress: String, id: ID, role: String!): Boolean
}

type Mutation {
    user: UserMutation
}